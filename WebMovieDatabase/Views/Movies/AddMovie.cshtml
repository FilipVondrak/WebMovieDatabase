@model Movie

@{
    ViewData["Title"] = "Add a movie";
    Layout = "_Layout";
}

<h2>Add Movie</h2>

<form asp-action="AddMovie" method="post">
    <div class="flex-column gap-2">
        <div>
            <label asp-for="Title"></label>
            <input asp-for="Title"/>
        </div>

        <div>
            <label asp-for="ImageUrl"></label>
            <input asp-for="ImageUrl"/>
        </div>
    </div>

    <button type="submit">Save</button>
</form>